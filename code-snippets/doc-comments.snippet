    </Snippet>
  </CodeSnippet>

  <!-- code -->
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>xmldoc-code</Title>
      <Shortcut>code</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CPP">
